<h2>Verificador de Números Primos</h2>

<p>Digite um número inteiro positivo:</p>

<input id="num" type="number" min="1" oninput="checkPrime()">

<script>
function isPrime(num) {
    for(let i = 2, sqrt = Math.sqrt(num); i <= sqrt; i++)
        if(num % i === 0) return false; 
    return num > 1;
}

function checkPrime() {
    let num = document.getElementById("num").value;
    num = parseInt(num);

    if(Number.isInteger(num) && num > 0) {
        if(isPrime(num)) {
            alert("O número " + num + " é primo.");
        } else {
            alert("O número " + num + " não é primo.");
        }
    } else {
        alert("Por favor, digite um número inteiro positivo.");
    }
}
</script>

